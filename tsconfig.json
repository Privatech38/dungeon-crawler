{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "types": ["@webgpu/types"],
    "baseUrl": "src",
    "paths": {
      "glm": ["lib/glm.js"],
      "engine/*": ["engine/*"],
      "dat": ["lib/dat.js"]
    }
  },
  "include": ["src"]
}
